<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/list_row_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/list_row_address"
        android:layout_below="@+id/list_row_name"
        android:layout_alignLeft="@+id/list_row_name"
        android:layout_alignStart="@+id/list_row_name"
        android:layout_gravity="left"
        android:textColor="#878787"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:id="@+id/list_row_distance"
        android:layout_below="@+id/list_row_address"
        android:layout_alignLeft="@+id/list_row_address"
        android:layout_alignStart="@+id/list_row_address"
        android:layout_gravity="left"
        android:textColor="#878787"
        android:textSize="15sp"/>

</RelativeLayout>